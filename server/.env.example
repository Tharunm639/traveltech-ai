import express from 'express';
import { GoogleGenerativeAI } from '@google/generative-ai';
import dotenv from 'dotenv';

dotenv.config();

const router = express.Router();

const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY);

router.post('/generate', async (req, res) => {
  try {
    const { destination, days, budget, vibe } = req.body;

    if (!destination) {
      return res.status(400).json({ error: 'Destination is required' });
    }

    const model = genAI.getGenerativeModel({ model: "gemini-1.5-flash" });

    const prompt = `
      Act as a professional travel agent. Plan a ${days}-day trip to ${destination}.
      Budget: ${budget}.
      Vibe: ${vibe}.
      
      STRICTLY return a JSON object with two arrays: "hotels" and "itinerary".
      Do NOT use markdown formatting.
      
      1. "hotels": Suggest 3 REAL, existing hotels in ${destination} that match the ${budget} budget.
         - name: string
         - price: string (estimated price per night)
         - description: string (brief highlight)
      
      2. "itinerary": An array of ${days} days.
         - day: number
         - morning: string (Specific real place/activity)
         - afternoon: string (Specific real restaurant for lunch)
         - evening: string (Specific real activity or dinner spot)
         
      Example JSON Structure:
      {
        "hotels": [
           { "name": "Hotel X", "price": "$100/night", "description": "Great view" }
        ],
        "itinerary": [
           { "day": 1, "morning": "Visit Eiffel Tower", "afternoon": "Lunch at Le Petit...", "evening": "Seine Cruise" }
        ]
      }
    `;

    const result = await model.generateContent(prompt);
    const response = await result.response;
    
    let text = response.text();
    // Clean up markdown if present
    text = text.replace(/```json/g, '').replace(/```/g, '').trim();

    const data = JSON.parse(text);

    res.json(data);

  } catch (error) {
    console.error("AI Generation Error:", error);
    res.status(500).json({ error: "Failed to generate itinerary. Please try again." });
  }
});

export default router;